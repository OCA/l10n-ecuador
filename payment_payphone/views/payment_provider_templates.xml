<?xml version="1.0" encoding="utf-8" ?>
<odoo noupdate="1">
    <template id="redirect_form">
        <!-- Payphone generates a unique URL for each payment request. -->
        <form t-att-action="api_url" method="get">
            <t t-foreach="url_params" t-as="param">
                <input
                    type="hidden"
                    t-att-name="param"
                    t-att-value="url_params[param]"
                />
            </t>
        </form>
    </template>
</odoo>
