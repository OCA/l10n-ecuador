<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="view_invoice_supplier_form_ec" model="ir.ui.view">
      <field name="name">account.invoice.supplier.form.ec</field>
      <field name="model">account.invoice</field>
      <field name="inherit_id" ref="account.invoice_supplier_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='partner_id']" position="after">
          <field name="comprobante_id" attrs="{'invisible':[('partner_id', '==', False)]}"/>
          <field name="detercero_id" domain="[('partner_id', '=', partner_id), ('valido_hasta', '&gt;=', current_date)]"/>
          <field name="numero_comprobante" attrs="{'invisible':[('detercero_id', '==', False)]}"/>
        </xpath>
        <xpath expr="//notebook/page" position="after">
          <page string="Retención">
            <group>
              <field name="ret_autorizacion_id" domain="[('valido_hasta', '&gt;=', current_date)]"/>
              <field name="numero_retencion" attrs="{'invisible':[('ret_autorizacion_id', '==', False)]}"/>
            </group>
          </page>
        </xpath>
      </field>
    </record>
    <record id="view_invoice_form_ec" model="ir.ui.view">
      <field name="name">account.invoice.form.ec</field>
      <field name="model">account.invoice</field>
      <field name="inherit_id" ref="account.invoice_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='partner_id']" position="after">
          <field name="comprobante_id" attrs="{'invisible':[('partner_id', '==', False)]}"/>
          <field name="autorizacion_id" domain="[('valido_hasta', '&gt;=', current_date)]"/>
          <field name="numero_comprobante" attrs="{'invisible':[('autorizacion_id', '==', False)]}"/>
        </xpath>
        <xpath expr="//field[@name='comment']" position="before">
          <field name="ret_detercero_id" domain="[('partner_id', '=', partner_id), ('valido_hasta', '&gt;=', current_date)]"/>
          <field name="numero_retencion" attrs="{'invisible':[('ret_detercero_id', '==', False)]}"/>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
